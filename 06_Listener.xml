<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <listeners><!-- 2nd way to link test class and listener class(recommended)-->
        <listener class-name="utilities.MyTestListener"> </listener>
    </listeners>
    <test verbose="2" preserve-order="true" name="ListenersXML">
        <classes>
            <class name="tests.C14_ListenersXML">
                <methods>
                    <include name="successTest"/>
                    <include name="failedTest"/>
                    <include name="skippedTest"/>
                    <include name="assertionErrorTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>